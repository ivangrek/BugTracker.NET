@using BugTracker.Web.Core
@using BugTracker.Web.Models
@model BugTracker.Web.Areas.Administration.Models.User.DeleteModel

@{
    var page = (PageModel) ViewBag.Page;

    ViewBag.Title = page.Title;
}

@section Styles {
}

@section Scripts {
}

@section BodyHeader {
    @Html.Partial("_MainMenu", page)
}

@section BodySubHeader {
}

<h5>Confirm deletion of user</h5>

@using (Html.BeginForm("Delete", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.Name): @Model.Name
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-link">Cancel</a>
}

@section BodyFooter {
    @Html.Raw(Util.Context.Application["custom_footer"])
}
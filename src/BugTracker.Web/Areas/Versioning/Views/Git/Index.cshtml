@using BugTracker.Web.Core
@using BugTracker.Web.Models
@model BugTracker.Web.Models.SortableTableModel

@{
    var page = (PageModel) ViewBag.Page;

    ViewBag.Title = page.Title;
}

@section Styles {
}

@section Scripts {
    @*TODO <body width="600">*@
    <script type="text/javascript" src="~/Scripts/sortable.js"></script>
}

@section BodyHeader {
    @Html.Partial("_MainMenu", page)
}

<div class="main">
    <span>Git File Commits for @page.ApplicationSettings.SingularBugLabel&nbsp;@ViewBag.Id</span>

    @if (Model.DataTable.Rows.Count > 0)
    {
        @Html.Partial("_SortableTable", Model)
        ;
    }
    else
    {
        <div>No revisions.</div>
    }
</div>

@section BodyFooter {
    @Html.Raw(Util.Context.Application["custom_footer"])
}
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Hello, world, from BugTracker.NET Core MVC</title>
    <meta name="viewport" content="width=device-width">
</head>
<body>
    <h1>Hello, world, from BugTracker.NET Core MVC!</h1>
    @{
        var formId = Guid.NewGuid().ToString();
    }

    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = formId, style = "display: inline;" }))
    {
        @Html.AntiForgeryToken()

        @:Logged in as @User.Identity.Name <a href="#" onclick="document.getElementById('@formId').submit();">Logout</a>
    }
</body>
</html>
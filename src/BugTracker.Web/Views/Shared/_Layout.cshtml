<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/png" href="~/favicon.ico">
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/open-iconic/font/css/open-iconic-bootstrap.css" rel="stylesheet" />
    <link href="~/lib/mvc-grid/css/mvc-grid/mvc-grid.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", false)
</head>
<body class="min-vh-100 bg-light">
    @await RenderSectionAsync("BodyHeader", false)

    <main role="main" class="container-fluid px-0">
        @await RenderSectionAsync("BodySubHeader", false)

        <div class="p-3">
            <h1 class="mb-3">@ViewBag.Title</h1>
            @RenderBody()
        </div>
    </main>

    @await RenderSectionAsync("BodyFooter", false)

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/popper.js/umd/popper.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/mvc-grid/js/mvc-grid.js"></script>
    <script>
        document.querySelectorAll(".mvc-grid").forEach(element => new MvcGrid(element));
    </script>

    @await RenderSectionAsync("Scripts", false)
</body>
</html>

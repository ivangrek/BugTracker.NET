@model BugTracker.Web.Models.Account.LoginModel

@{
    var page = (BugTracker.Web.Models.PageModel)ViewBag.Page;

    ViewBag.Title = page.Title;
}

@section Head {
}

@section BodyHeader {
    <div style="float: right;">
        <span>
            <a target="_blank" style="font-family: arial; font-size: 7pt; letter-spacing: 1px;" href="http://ifdefined.com/bugtrackernet.html">BugTracker.NET</a>
            <br>
            <a target="_blank" style="font-family: arial; font-size: 7pt; letter-spacing: 1px;" href="http://ifdefined.com/README.html">Help</a>
            <br>
            <a target="_blank" style="font-family: arial; font-size: 7pt; letter-spacing: 1px;" href="mailto:ctrager@yahoo.com">Feedback</a>
            <br>
            <a target="_blank" style="font-family: arial; font-size: 7pt; letter-spacing: 1px;" href="~/Content/about.html">About</a>
            <br>
            <a target="_blank" style="font-family: arial; font-size: 7pt; letter-spacing: 1px;" href="http://ifdefined.com/README.html">Donate</a>
        </span>
    </div>

    <table style="border-spacing: 0;">
        <tr>
            @Html.Raw(BugTracker.Web.Core.Util.Context.Application["custom_logo"])
        </tr>
    </table>
}

<div style="width: 320px; margin: 0 auto;">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "frm" }))
    {
        @Html.AntiForgeryToken()

        if (page.ApplicationSettings.WindowsAuthentication != 0)
        {
            <div style="margin-bottom: 8px;">
                <span class="smallnote">To login using your Windows ID, leave User blank</span>
            </div>
        }

        <div style="margin-bottom: 8px;">
            <div class="lbl" style="margin-bottom: 4px;">User:</div>
            <div>
                @Html.TextBoxFor(x => x.Login, new { @class = "txt", id = "user", style = "box-sizing: border-box; width: 100%;" })
            </div>
        </div>

        <div style="margin-bottom: 8px;">
            <div class="lbl" style="margin-bottom: 4px;">Password:</div>
            <div>
                @Html.TextBoxFor(x => x.Password, new { @class = "txt", type = "password", id = "pw", style = "box-sizing: border-box; width: 100%;" })
            </div>
        </div>

        <div class="err">
            @Html.ValidationMessage("Message")
        </div>

        <div style="text-align: right;">
            <input class="btn" type="submit" value="Logon" />
        </div>
    }

    <div>
        @if (page.ApplicationSettings.AllowGuestWithoutLogin)
        {
            <p>
                <a href="~/Bugs/List.aspx">Continue as "guest" without logging in</a>
            </p>
        }

        @if (page.ApplicationSettings.AllowSelfRegistration)
        {
            <p>
                <a href="@Url.Action("Register", "Account")">Register</a>
            </p>
        }

        @if (page.ApplicationSettings.ShowForgotPasswordLink)
        {
            <p>
                <a href="@Url.Action("Forgot", "Account")">Forgot your username or password?</a>
            </p>
        }
    </div>

    @Html.Raw(BugTracker.Web.Core.Util.Context.Application["custom_welcome"])
</div>

@section BodyFooter {
}
